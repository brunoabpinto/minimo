{
    "name": "brunopinto/minimo",
    "repositories": [
        {
            "type": "path",
            "url": "packages/minimo-core",
            "options": {
                "symlink": true
            }
        }
    ],
    "config": {
        "platform": {
            "php": "8.3.0"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": [
            "app/helpers.php"
        ]
    },
    "bin": [
        "minimo"
    ],
    "require": {
        "brunopinto/minimo-core": "^1.0",
        "php": "^8.3",
        "illuminate/events": "^12.0",
        "illuminate/view": "^12.0",
        "league/commonmark": "^2.6",
        "symfony/yaml": "^7.4"
    }
}
